<div class="workout">
<div class="container mt-5">
  <h1 class="mb-4">My Workouts</h1>
  <%= form_for @workout, url: workouts_path, html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :sport, class: "control-label" %>
      <%= f.text_field :sport, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :duration, class: "control-label" %>
      <%= f.number_field :duration, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :calories_burned, class: "control-label" %>
      <%= f.number_field :calories_burned, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Log Workout', class: "btn btn-primary" %>
    </div>
  <% end %>

  <ul class="list-group mt-4">
    <% @workouts.each do |workout| %>
      <li class="list-group-item">
        <strong><%= workout.sport %></strong> - <%= workout.duration %> mins - <%= workout.calories_burned %> calories
      </li>
    <% end %>
  </ul>
</div>
